<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu Management | Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <!-- Admin Navigation -->
    <nav class="bg-gradient-to-r from-purple-600 to-blue-600 text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <div class="flex items-center space-x-4">
                <a href="/admin" class="text-white hover:text-gray-200">
                    <i class="fas fa-arrow-left mr-2"></i>Dashboard
                </a>
                <h1 class="text-2xl font-bold">Menu Management</h1>
            </div>
            <a href="/api/users/signout" class="hover:text-gray-200">Logout</a>
        </div>
    </nav>

    <div class="container mx-auto p-6">
        <!-- Add New Item Button -->
        <div class="mb-6">
            <button onclick="showAddModal()" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700">
                <i class="fas fa-plus mr-2"></i>Add New Menu Item
            </button>
        </div>

        <!-- Menu Items Table -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Item</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody id="menu-table-body" class="bg-white divide-y divide-gray-200">
                    <!-- Menu items will be loaded here -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Add/Edit Modal -->
    <div id="menu-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden">
        <div class="flex items-center justify-center min-h-screen p-4">
            <div class="bg-white rounded-lg max-w-md w-full p-6">
                <div class="flex justify-between items-center mb-4">
                    <h3 id="modal-title" class="text-lg font-bold">Add New Menu Item</h3>
                    <button onclick="hideModal()" class="text-gray-400 hover:text-gray-600">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                
                <form id="menu-form">
                    <input type="hidden" id="item-id">
                    
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Name</label>
                        <input type="text" id="item-name" class="w-full p-2 border rounded-lg" required>
                    </div>
                    
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                        <select id="item-type" class="w-full p-2 border rounded-lg" required>
                            <option value="">Select Category</option>
                            <option value="veg">Vegetarian</option>
                            <option value="nonveg">Non-Vegetarian</option>
                            <option value="beverages">Beverages</option>
                        </select>
                    </div>
                    
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Price (₹)</label>
                        <input type="number" id="item-price" class="w-full p-2 border rounded-lg" min="0" required>
                    </div>
                    
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Original Price (₹) - Optional</label>
                        <input type="number" id="item-original-price" class="w-full p-2 border rounded-lg" min="0">
                    </div>
                    
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Image URL</label>
                        <input type="url" id="item-image" class="w-full p-2 border rounded-lg" placeholder="https://example.com/image.jpg" required>
                        <div class="mt-2">
                            <div id="image-preview" class="hidden">
                                <img id="preview-img" src="" alt="Preview" class="w-20 h-20 rounded-lg object-cover border">
                                <p class="text-xs text-gray-500 mt-1">Image preview</p>
                            </div>
                            <div id="image-error" class="hidden text-red-500 text-xs mt-1">
                                Failed to load image. Please check the URL.
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                        <textarea id="item-desc" class="w-full p-2 border rounded-lg" rows="3" required></textarea>
                    </div>
                    
                    <div class="mb-6">
                        <label class="flex items-center">
                            <input type="checkbox" id="item-popular" class="mr-2">
                            <span class="text-sm font-medium text-gray-700">Mark as Popular</span>
                        </label>
                    </div>
                    
                    <div class="flex space-x-4">
                        <button type="submit" class="flex-1 bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700">
                            <span id="submit-text">Add Item</span>
                        </button>
                        <button type="button" onclick="hideModal()" class="flex-1 bg-gray-300 text-gray-700 py-2 px-4 rounded-lg hover:bg-gray-400">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/admin-menu.js"></script>
    <% if (locals.openModal) { %>
    <script>
        // Auto-open the modal if we came from the "Add New Item" link
        document.addEventListener('DOMContentLoaded', () => {
            setTimeout(() => {
                showAddModal();
            }, 500);
        });
    </script>
    <% } %>
</body>
</html>

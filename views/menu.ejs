<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Our Menu | THE CAFEINE Restaurant</title>

    <!-- FontAwesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="css/menu.css" />
    <script defer src="js/menu.js"></script>
  </head>
  <body>
    <!-- header section starts  -->
    <header class="header">
      <a href="/" class="logo"><img src="images/logo.png" alt="Logo" /></a>
      <nav class="navbar">
        <% if (user && user.isAdmin) { %>
          <!-- Admin user: only show admin dashboard and logout -->
          <a href="/admin" style="color: #ff6b6b; font-weight: bold;">Admin Dashboard</a>
          <a href="/api/users/signout">Log Out</a>
        <% } else if (name) { %>
          <!-- Regular logged-in user: show normal navigation -->
          <a href="/">home</a>
          <a href="/#about">about</a>
          <a href="menu" style="color: var(--main-color)">menu</a>
          <a href="feedback">feedback</a>
          <a href="/#contact">contact</a>
          <a href="/my-orders">My Orders</a>
          <a href="/api/users/signout">Log Out</a>
        <% } else { %>
          <!-- Not logged in: show public navigation -->
          <a href="/">home</a>
          <a href="/#about">about</a>
          <a href="menu" style="color: var(--main-color)">menu</a>
          <a href="feedback">feedback</a>
          <a href="/#contact">contact</a>
          <a href="signin">Sign In</a>
        <% } %>

        <!-- Cart Icon -->
        <button
          onclick="toggleCart()"
          class="cart-btn"
        >
          <i class="fas fa-shopping-cart"></i>
          <span id="cart-count" class="cart-count">0</span>
        </button>
      </nav>
    </header>
    <!-- header section ends -->

    <!-- Menu Hero Section -->
    <section class="menu-hero">
      <div class="hero-content">
        <h1 class="hero-title">
          <span class="title-accent">Our</span> Delicious Menu
        </h1>
        <p class="hero-subtitle">Discover culinary excellence crafted with passion and the finest ingredients</p>
        <div class="hero-decoration">
          <i class="fas fa-utensils decoration-icon"></i>
          <div class="decoration-line"></div>
          <i class="fas fa-utensils decoration-icon"></i>
        </div>
      </div>
      <div class="hero-overlay"></div>
    </section>

    <!-- Menu Categories Section -->
    <section class="menu-categories">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Browse Our <span>Categories</span></h2>
          <p class="section-description">Choose from our carefully curated selection</p>
        </div>
        
        <div class="category-filters">
          <button onclick="renderMenu('all')" class="filter-btn active" data-category="all">
            <i class="fas fa-th-large"></i>
            <span>All Items</span>
          </button>
          <button onclick="renderMenu('veg')" class="filter-btn" data-category="veg">
            <i class="fas fa-leaf"></i>
            <span>Vegetarian</span>
          </button>
          <button onclick="renderMenu('nonveg')" class="filter-btn" data-category="nonveg">
            <i class="fas fa-drumstick-bite"></i>
            <span>Non-Vegetarian</span>
          </button>
          <button onclick="renderMenu('beverages')" class="filter-btn" data-category="beverages">
            <i class="fas fa-coffee"></i>
            <span>Beverages</span>
          </button>
        </div>
      </div>
    </section>

    <!-- Menu Items Section -->
    <section class="menu-items-section">
      <div class="container">
        <div id="menu-items" class="menu-grid">
          <!-- Items will be populated by JavaScript -->
        </div>
        
        <!-- Loading Animation -->
        <div id="loading" class="loading-container">
          <div class="loading-spinner">
            <i class="fas fa-utensils"></i>
          </div>
          <p>Preparing your menu...</p>
        </div>
      </div>
    </section>

    <!-- Special Offers Section -->
    <section class="special-offers">
      <div class="container">
        <div class="offers-grid">
          <div class="offer-card">
            <div class="offer-icon">
              <i class="fas fa-clock"></i>
            </div>
            <h3>Happy Hours</h3>
            <p>20% off on all beverages from 3-5 PM daily</p>
          </div>
          <div class="offer-card">
            <div class="offer-icon">
              <i class="fas fa-shipping-fast"></i>
            </div>
            <h3>Free Delivery</h3>
            <p>On orders above ₹500 within 5km radius</p>
          </div>
          <div class="offer-card">
            <div class="offer-icon">
              <i class="fas fa-star"></i>
            </div>
            <h3>Chef's Special</h3>
            <p>Try our signature dishes recommended by our head chef</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Enhanced Cart Sidebar -->
    <div id="cart-sidebar" class="cart-sidebar">
      <div class="cart-header">
        <h2><i class="fas fa-shopping-cart"></i> Your Order</h2>
        <button onclick="toggleCart()" class="close-cart">
          <i class="fas fa-times"></i>
        </button>
      </div>
      
      <div id="cart-items" class="cart-items-container">
        <div class="empty-cart">
          <i class="fas fa-shopping-cart"></i>
          <p>Your cart is empty</p>
          <span>Add some delicious items to get started!</span>
        </div>
      </div>
      
      <div class="cart-summary">
        <div class="summary-row">
          <span>Subtotal:</span>
          <span id="cart-subtotal">₹0</span>
        </div>
        <div class="summary-row">
          <span>Delivery:</span>
          <span id="cart-delivery">₹40</span>
        </div>
        <div class="summary-row total">
          <span>Total:</span>
          <span id="cart-total">₹0</span>
        </div>
      </div>
      
      <div class="cart-actions">
        <button onclick="clearCart()" class="clear-btn">
          <i class="fas fa-trash"></i> Clear Cart
        </button>
        <button onclick="checkout()" class="checkout-btn">
          <i class="fas fa-credit-card"></i> Checkout
        </button>
      </div>
    </div>

    <!-- Notification Toast -->
    <div id="toast" class="toast-notification">
      <div class="toast-content">
        <i class="fas fa-check-circle"></i>
        <span id="toast-message">Item added to cart!</span>
      </div>
    </div>

    <!-- footer section begins  -->
    <section class="footer">
      <div class="share">
        <a href="#" class="fab fa-facebook-f"></a>
        <a href="#" class="fab fa-twitter"></a>
        <a href="#" class="fab fa-instagram"></a>
        <a href="#" class="fab fa-linkedin"></a>
        <a href="#" class="fab fa-pinterest"></a>
      </div>
      <div class="links">
        <a href="/">home</a>
        <a href="/#about">about</a>
        <a href="menu">menu</a>
        <a href="feedback">feedback</a>
        <a href="/#review">review</a>
        <a href="/#contact">contact</a>
      </div>
      <div class="credit">created by <span>Chahat</span>| all rights reserved</div>
    </section>
    
    <!-- Enhanced logout script -->
<% if (user || name) { %>
<script src="js/logout-fix.js"></script>
<% } %>
  </body>
</html>
